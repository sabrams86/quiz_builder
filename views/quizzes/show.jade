extends ./../layout

block content
  h1= quiz.name
  if messages
    include ./../_success_messages
  p
    a(href='/quizzes') Back to my quizzes
  p
    a(href='/quizzes/'+quiz._id+'/edit') Edit this quiz
  h3 Description
  p= quiz.description
  h3 Categories
  ul 
    each category in quiz.categories
      li= category
  
  h3 Questions
  table.table.table-hover
    thead
      tr
        th Question
        th Answer
    tbody
      each question in quiz.questions
        tr
          td= question.question
          td= question.answer
