extends layout

block content
  div.login-form
    a.right(href='/users/new') Register as a new User
    form(action='/users/login' method='post')
      p
        label.col-md-6(for='email') Email
        input#email.col-md-6(type='text' name='email')
      p
        label.col-md-6(for='password') Password
        input#password.col-md-6(type='password' name='password')
      p
        div.col-md-6
        input#login.btn.btn-xs.btn-success(type='submit' value='Login')
  div.page-header
    h1 Quiz Builder 
      small Welcome!  Feel free to take some quizzes or make your own!
  form(action='/quizzes/new' method='get')
    button.btn.btn-primary.btn-block.btn-lg(type='submit') Make a New Quiz
  div.clear
  div.container
    each quiz in quizzes
      a(href='/quizzes/'+quiz._id+'/play')
        div.quiz
          h4= quiz.name
          div.quizdesc= quiz.description
